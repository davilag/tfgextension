{
  "manifest_version": 2,

  "name": "Cambia form",
  "description": "This extension changes the value of an login form if there is anyone in the actual web page",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": [
    "privacy","declarativeContent", "tabs","activeTab","http://*/*", "https://*/*","localhost:*/*"
  ],
  "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js","jquery-1.10.2.js"],
            "all_frames": true
        }
    ]
}
